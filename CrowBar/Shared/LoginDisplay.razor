<div class="user-info">
    <AuthorizeView>
        <Authorizing>
            <text>...</text>
        </Authorizing>
        <Authorized>
            <img src="img/user.svg" />
            <div>
                <a href="Identity/Account/Manage/Index" class="username">@context.User.Identity.Name</a>
                <form class="form-inline" method="post" action="Identity/Account/Logout">
                    <button type="submit" class="btn btn-link sign-out">Sign out</button>
                </form>
            </div>
        </Authorized>
        <NotAuthorized>
            <a class="sign-in" href="Identity/Account/Register">Register</a>
            <a class="sign-in" href="Identity/Account/Login">Log in</a>
        </NotAuthorized>
    </AuthorizeView>
</div>